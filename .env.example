# Amarbis Admin Dashboard Environment Configuration
# Copy this file to .env.local and fill in your values

# ==========================================
# CORE APPLICATION SETTINGS
# ==========================================
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3003
NEXTAUTH_SECRET=generate-a-secure-admin-specific-secret

# Production URL
NEXT_PUBLIC_APP_URL=https://admin.amarbis.com

# ==========================================
# DATABASE - Use same as main app
# ==========================================
# PostgreSQL connection strings
POSTGRES_PRISMA_URL_SAFE="postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres?pgbouncer=true"
POSTGRES_URL_NON_POOLING="postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Legacy names (for compatibility)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# ==========================================
# ADMIN SPECIFIC SETTINGS
# ==========================================
# Admin email whitelist (comma-separated)
ADMIN_EMAIL_WHITELIST=admin@amarbis.com,support@amarbis.com

# Security settings
ADMIN_IP_WHITELIST=127.0.0.1,::1
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Session settings (shorter for admin)
SESSION_MAX_AGE=3600

# ==========================================
# EMAIL SETTINGS (for notifications)
# ==========================================
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=admin@amarbis.com
EMAIL_SERVER_PASSWORD=your-gmail-app-password
EMAIL_FROM=Amarbis Admin <admin@amarbis.com>

# ==========================================
# SOCKET SERVICE URL (for real-time updates)
# ==========================================
NEXT_PUBLIC_SOCKET_URL=http://localhost:8080

# ==========================================
# MAIN APP URL (for links)
# ==========================================
NEXT_PUBLIC_MAIN_APP_URL=http://localhost:3002

# ==========================================
# CLOUDINARY (for viewing user photos)
# ==========================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ==========================================
# DEVELOPMENT FLAGS
# ==========================================
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_ADMIN_ACTIONS=true
